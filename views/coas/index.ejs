<h2 class="page-header">Search Chart of Accounts</h2>
<form action="/coas" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Chart of Account Description: </label>
            <input type="text" name="description" value="<%= searchOptions.description %>" autocomplete="off">
            <button class="btn btn-primary" type="submit">Search</button>
       </div>
    </div>
</form>
<br>
<% coas.forEach(coa => { %>
    <div class="form-row">
        <div class="form-item form-item-no-grow">
            <%= coa.code%> 
        </div> 
        <div class="form-item">
            <%= coa.description%>
        </div> 
        <div class="form-item">
            <%= coa.type%>
        </div> 
        <div class="form-item">
            <div class="btn-row">
                <a class="btn btn-primary" href="/coas/<%= coa.id %>">View</a>
                <a class="btn btn-primary" href="/coas/<%= coa.id %>/edit">Edit</a>
                <%- include('../partials/deleteForm', 
                        { url: `/coas/${coa.id}` }) %>
            </div>
        
        </div>
    </div>
<% }) %> 