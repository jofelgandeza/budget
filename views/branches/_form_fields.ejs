<div class="form-row">
    <div class="form-item-column">
        <label>Employee Code</label>
        <% if (resetPW) { %>
            <input type="text" name="empCode" value="<%= emp.emp_code %>" autocomplete="off" required disabled>
        <% } else { %>
            <input type="text" name="empCode" value="<%= emp.emp_code %>" autocomplete="off">
        <% } %>
    </div>
    <div class="form-item-column">
        <label>Branch Code</label>
        <% if (resetPW) { %>
            <input type="text" name="brnCode" value="<%= emp.branch %>" disabled>
        <% } else { %>
            <input type="text" name="brnCode" value="<%= emp.branch %>" required>
        <% } %>
    </div>
    <div class="form-item-column">
    </div>
</div>
<div class="form-row">
    <div class="form-item-column">
        <label>Last Name</label>
        <% if (resetPW) { %>
            <input type="text" name="lName" value="<%= emp.last_name %>" autocomplete="off" disabled>
        <% } else { %>
            <input type="text" name="lName" value="<%= emp.last_name %>" autocomplete="off"  required>
        <% } %>
    </div>
    <div class="form-item-column">
        <label>First Name</label>
        <% if (resetPW) { %>
            <input type="text" name="fName" value="<%= emp.first_name %>" autocomplete="off" disabled>
        <% } else { %>
            <input type="text" name="fName" value="<%= emp.first_name %>" autocomplete="off" required>
        <% } %>
    </div>
    <div class="form-item-column">
        <label>Middle Name</label>
        <% if (resetPW) { %>
            <input type="text" name="mName" value="<%= emp.middle_name %>" autocomplete="off" disabled>
        <% } else { %>
            <input type="text" name="mName" value="<%= emp.middle_name %>" autocomplete="off" required>
        <% } %>
    </div>
</div>
<div class="form-row">
    <div class="form-item-column">
        <label>Position</label>
        <% if (!resetPW) { %>
            <select id="ayApo" name="ayPost" onchange="hideUnitPoInputs()">
            <% posit.forEach(positi => { %>
                <% if ( positi.id == emp.position_code) { %>
                   <option selected value="<%= positi.id %>" label="<%= positi.title %>"> </option>
                <% } else { %>
                    <option value="<%= positi.id %>" label="<%= positi.title %>"> </option>
                <%  } %>
            <% }) %> 
            </select>
        <% } else { %>
            <input type="text" name="ayPost" value="<%= posit %>" autocomplete="off" disabled>
        <% } %>
    </div>
    <div class="form-item-column">
        <label>Unit</label>
        <% if (resetPW) { %>
            <input type="text" enable name="poUnit" id="poUnit" value="<%= emp.unit %>" disabled>
        <% } else { %>
            <input type="text" enable name="poUnit" id="poUnit" value="<%= emp.unit %>" >
        <% } %>
    </div>
    <div class="form-item-column">
        <label>PO Number</label>
        <% if (resetPW) { %>
            <input type="number" name="poNumber" id="poNumber" value="<%= emp.po_number %>" autocomplete="off" disabled>
        <% } else { %>
            <input type="number" name="poNumber" id="poNumber" value="<%= emp.po_number %>" autocomplete="off" min="1" max="15">
        <% } %>
    </div>
</div>
<div>
    <p></p>
</div>
<div>
    <hr>
</div>
<div>
<p></p>
</div>
<div class="form-row">
    <% if (newEmp || resetPW) { %> 
        <div class="form-item-columnUSER">
            <label>System's User Name</label>
            <% if (newEmp) { %> 
                <input type="email" name="email" value="<%= user.email %>" autocomplete="off">
            <% } else { %>
                <input type="email" name="email" value="<%= user.email %>" autocomplete="off" disabled>
                <input type="user_id" name="user_id" value="<%= user.id %>" autocomplete="off" hidden>
            <% } %>
        </div>
        <div class="form-item-columnUSER">
            <label>Password</label>
            <input type="password" name="password" value="<%= user.password %>">
        </div>
    <% } %>
    <div class="form-item-column">
    </div>
</div>
