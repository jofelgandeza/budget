<section class="s1">
    <div class="main-container">
       <h4> BRANCH EMPLOYEES MAINTENANCE</h4>
        <table class="content-table">
            <tr>
                <th> NAME</th>
                <th> POSITION</th>
                <th> ASSIGNMENT</th>
                <th> LINKS</th>
            </tr>
            <% fndEmploy.forEach(brnEmployee => { %>
                <tr>
                    <td><%= brnEmployee.empName %> </td>
                    <td><%= brnEmployee.empPost %> </td>
                    <td><%= brnEmployee.assign_code %> </td>
                    <td>
                        <div class="btn-row">
                            <% if (brnEmployee.empPost === "BRANCH MANAGER") { %>

                            <% } else { %>
                            <a class="btn btn-primary" href="/branches/getEmpForEdit/<%= branchCode + brnEmployee.empCode %>/edit">Edit</a>

                            <% } %>
                            <!-- <%- include('../partials/deleteForm', { url: `/branches/deleteEmp/${branchCode+brnEmployee.empID}` }) %> -->
                        </div>        
                    </td>
                </tr>
            <% }) %> 
        </table>
        <div>
            <a class="btn btn-primary" href="/branches/newEmpPUH/<%= branchCode %>">ADD NEW PUH</a>
            <a class="btn btn-primary" href="/branches/newEmpPO/<%= branchCode %>">ADD NEW PO</a>
            <a class="btn btn-primary" href="/branches/<%= branchCode %>">DONE</a>
        </div>
    </div>
</section>

