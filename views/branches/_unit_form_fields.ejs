<div class="form-row">
    <div class="form-item-column">

    </div>
    <div class="form-item-column">
        <label>Unit</label>
        <input type="text" name="uUnit" value="<%= unit.unit %>" autocomplete="off">
    </div>
    <div class="form-item-column">
        <label>Loan Product Offered</label>
        <select name="loanTyp">
            <% lonType.forEach(lnTyp => { %>
                <% if ( lnTyp.title === unit.loan_type) { %>
                   <option selected value="<%= lnTyp.title %>"><%= lnTyp.title %></option>
                <% } else { %>
                    <option value="<%= lnTyp.title %>"><%= lnTyp.title %></option>
                <%  } %>
            <% }) %> 
        </select>
    </div>
    <div class="form-item-column">
    </div>
</div>

<div class="form-row">
    <div class="form-item-column">
    </div>
    <div class="form-item-column">
        <label>Address</label>
        <input type="text" enable name="unitAdd" id="unitAdd" value="<%= unit.address %>">
    </div>
    <div class="form-item-column">
        Office Location
        <div>
            <% if (unit.office_loc === "In-house") { %>
                <input type="radio" name="office_loc" id="inHouse" value="In-house" checked>
            <% } else { %>
                <input type="radio" name="office_loc" id="inHouse" value="In-house">
            <% } %>
            <label for="inHouse">In-house</label>
            <br>
            <% if (unit.office_loc === "Sattelite") { %>
                <input type="radio" name="office_loc" id="inHouse" value="Sattelite" checked>
            <% } else { %>
                <input type="radio" name="office_loc" id="inHouse" value="Sattelite">
            <% } %>
                <label for="inHouse">Sattelite</label>
        </div>
    </div>
    <div class="form-item-column">

    </div>
</div>
