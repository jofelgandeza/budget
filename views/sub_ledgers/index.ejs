<h2 class="page-header">Search Sub-Ledger Accounts</h2>
<form action="/sub_ledgers" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Description: </label>
            <input type="text" name="description" value="<%= searchOptions.description %>" autocomplete="off">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </div>
</form>
<br>
<% sub_ledgers.forEach(sub_ledger => { %>
    <div class="form-row">
        <div class="form-item form-item-no-grow">
            <%= sub_ledger.code %>
        </div>
        <div class="form-item">
            <%= sub_ledger.description %>
        </div>
        <div class="form-item">
            <%= sub_ledger.type %>
        </div>
        <div class="form-item">
            <div class="btn-row">
                <a class="btn btn-primary" href="/sub_ledgers/<%= sub_ledger.id %>">View</a>
                <a class="btn btn-primary" href="/sub_ledgers/<%= sub_ledger.id %>/edit">Edit</a>
                 <%- include('../partials/deleteForm', { url: `/sub_ledgers/${sub_ledger.id}` }) %>
            </div>
        </div>
    </div>
     <% }) %>
