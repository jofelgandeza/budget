<div class="form-row">
    <div class="form-item-column">
        <label>NAME:</label>
        <% if (resetPW) { %>
            <input type="text" name="lName" value="<%= yoser.name %>" autocomplete="off" disabled>
        <% } else { %>
            <input type="text" name="lName" value="<%= yoser.name %>" autocomplete="off"  required>
        <% } %>
    </div>
    <div class="form-item-column">
        <label>ROLE</label>
        <% if (resetPW) { %>
            <input type="text" name="fName" value="<%= yoser.role %>" autocomplete="off" disabled>
        <% } else { %>
            <input type="text" name="fName" value="<%= yoser.role %>" autocomplete="off" required>
        <% } %>
    </div>
    <div class="form-item-column">
    </div>
</div>
