<div class="form-row">
    <% if (newEmp || resetPW) { %> 
        <div class="form-item-columnUSER">
            <label>System's User Name</label>
            <% if (newEmp) { %> 
                <input type="email" id="email" name="email" value="<%= yoser.email %>" onclick="setOffEmailUser()" autocomplete="off">
            <% } else { %>
                <input type="email" name="email" value="<%= yoser.email %>" autocomplete="off" disabled>
                <input type="yoser_id" name="user_id" value="<%= yoser.id %>" autocomplete="off" hidden>
            <% } %>
        </div>
        <div class="form-item-columnUSER">
            <label>Password</label>
            <input type="password" name="password" value="<%= yoser.password %>">
        </div>
    <% } %>
    <div class="form-item-column">
    </div>
</div>
